# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Set default file encoding
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Ignore certain files
[.git]
ignore = true

[dist/**]
ignore = true

# Specify rules for specific file types
[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2
